<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_food"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_foodName"
        android:layout_width="122dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/imageView_food"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imageView_food"
        android:text="Food Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintStart_toEndOf="@+id/imageView_food"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Rating"
        android:layout_width="122dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView_foodName"
        android:layout_alignStart="@+id/textView_foodName"
        android:layout_alignLeft="@+id/textView_foodName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Rating: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintStart_toEndOf="@+id/imageView_food"
        app:layout_constraintTop_toBottomOf="@+id/textView_foodName" />
</android.support.constraint.ConstraintLayout>